{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard", // https://github.com/standard/standard
    "prettier" // https://github.com/prettier/eslint-config-prettier
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "jest"],
  "rules": {}
}
