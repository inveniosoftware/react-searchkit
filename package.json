{
  "name": "@inveniosoftware/react-searchkit",
  "version": "1.0.0",
  "description": "react-searchkit React components to build a search UI",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
